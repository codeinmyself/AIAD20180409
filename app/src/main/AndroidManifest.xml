<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xmu.lxq.aiad">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:name=".service.AppContext"
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:label="产品识别"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.RegisterActivity"
            android:screenOrientation="portrait"
            android:label="Register" />
        <activity
            android:name=".activity.SudokuActivity"
            android:screenOrientation="portrait"
            android:label="Sudoku" />
        <activity
            android:name=".activity.PersonalInfo"
            android:screenOrientation="portrait"
            android:label="PersonalInfo" />
        <activity
            android:name=".activity.IconActivity"
            android:screenOrientation="portrait"
            android:label="Icon" />
        <activity
            android:name=".activity.VideoActivity"

            android:label="Video"
            android:screenOrientation="landscape" />
        <activity
            android:name=".activity.ProductTypeActivity"
            android:screenOrientation="portrait"
            android:label="ProductType" />
        <activity
            android:name=".activity.ProgressActivity"
            android:screenOrientation="portrait"
            android:label="Progress" />
        <activity
            android:name=".activity.ResultActivity"
            android:screenOrientation="portrait"
            android:label="Result" />
        <activity android:name=".activity.TimeStyleActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.AddWordsActivity"
            android:screenOrientation="portrait"/>
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.aiad2.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>




        <activity android:name=".activity.RecordedActivity"
            android:screenOrientation="portrait"/>
            <!--android:configChanges="orientation|screenSize|keyboardHidden|navigation"--> />
        <activity android:name=".activity.BaseActivity"
            android:screenOrientation="portrait"/>



    </application>

</manifest>